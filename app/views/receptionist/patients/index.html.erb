<h1>Patients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date of birth</th>
      <th>Gender</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.full_name %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.gender %></td>
        <td><%= patient.phone %></td>
        <td><%= link_to 'Show', receptionist_patient_path(patient) %></td>
        <td><%= link_to 'Edit', edit_receptionist_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', receptionist_patient_path(patient), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_receptionist_patient_path %>