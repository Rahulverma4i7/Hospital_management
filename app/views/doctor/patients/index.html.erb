<div class="container py-4">
  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="display-5 fw-bold text-primary">
        <i class="bi bi-people-fill me-2"></i>Patient Records
      </h1>
      <p class="text-muted mb-0">Comprehensive patient management dashboard</p>
    </div>
    <% if Rails.env.development? && @registration_data.values.sum.zero? %>
      <%= button_to "Generate Sample Data",
            create_sample_data_doctor_patients_path,
            method: :post,
            class: "btn btn-primary rounded-pill px-4",
            form: { class: "d-inline" } do %>
        <i class="bi bi-database-add me-2"></i>Sample Data
      <% end %>
    <% end %>
  </div>

  <!-- Stats Row -->
  <div class="row mb-4">
    <div class="col-md-4">
      <div class="card border-start-primary shadow-sm h-100">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-grow-1">
              <h6 class="text-uppercase text-primary fw-bold mb-0">Total Patients</h6>
              <h2 class="mb-0"><%= @patients.count %></h2>
            </div>
            <div class="icon-circle bg-primary text-white">
              <i class="bi bi-people-fill"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-start-success shadow-sm h-100">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-grow-1">
              <h6 class="text-uppercase text-success fw-bold mb-0">New This Month</h6>
              <h2 class="mb-0"><%= @patients.where('created_at >= ?', 30.days.ago).count %></h2>
            </div>
            <div class="icon-circle bg-success text-white">
              <i class="bi bi-graph-up-arrow"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-start-info shadow-sm h-100">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-grow-1">
              <h6 class="text-uppercase text-info fw-bold mb-0">Avg. Age</h6>
              <h2 class="mb-0">
                <% avg_age = @patients.average { |p| age_from_dob(p.dob) } %>
                <%= avg_age ? avg_age.round(1) : 'N/A' %>
              </h2>
            </div>
            <div class="icon-circle bg-info text-white">
              <i class="bi bi-calendar-heart"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Chart Section -->
  <div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-white border-0 py-3">
      <div class="d-flex justify-content-between align-items-center">
        <h5 class="mb-0 text-primary">
          <i class="bi bi-graph-up me-2"></i>Registration Trends (Last 30 Days)
        </h5>
        <div class="dropdown">
          <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
            <i class="bi bi-download me-1"></i>Export
          </button>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="#"><i class="bi bi-file-earmark-pdf me-2"></i>PDF</a></li>
            <li><a class="dropdown-item" href="#"><i class="bi bi-file-earmark-excel me-2"></i>Excel</a></li>
            <li><a class="dropdown-item" href="#"><i class="bi bi-image me-2"></i>Image</a></li>
          </ul>
        </div>
      </div>
    </div>
    
    <div class="card-body">
      <% if @registration_data.values.sum.positive? %>
        <div class="chart-container" style="height: 350px;">
          <%= line_chart @registration_data,
                colors: ["#4e73df"],
                library: {
                  maintainAspectRatio: false,
                  scales: {
                    y: {
                      beginAtZero: true,
                      ticks: {
                        precision: 0,
                        stepSize: 1
                      }
                    }
                  },
                  plugins: {
                    legend: {
                      display: false
                    }
                  },
                  elements: {
                    line: {
                      tension: 0.4,
                      borderWidth: 3
                    },
                    point: {
                      radius: 4,
                      hoverRadius: 6
                    }
                  }
                } %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <div class="mb-3">
            <i class="bi bi-bar-chart text-muted" style="font-size: 3rem;"></i>
          </div>
          <h5 class="text-muted mb-3">No registration data available</h5>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Patients Table -->
  <div class="card shadow-sm border-0">
    <div class="card-header bg-white border-0 py-3">
      <div class="d-flex justify-content-between align-items-center">
        <h5 class="mb-0 text-primary">
          <i class="bi bi-table me-2"></i>Patient Directory
        </h5>
        <div class="d-flex">
          <div class="input-group input-group-sm" style="width: 200px;">
            <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
            <input type="text" class="form-control" placeholder="Search patients...">
          </div>
          <%= link_to "#", class: "btn btn-sm btn-primary ms-2" do %>
            <i class="bi bi-plus-lg me-1"></i>New Patient
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th class="ps-4">Patient Name</th>
              <th>Registered</th>
              <th>Gender</th>
              <th>Age</th>
              <th class="text-end pe-4">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @patients.each do |patient| %>
              <tr>
                <td class="ps-4">
                  <div class="d-flex align-items-center">
                    <div class="avatar-sm bg-light-primary rounded-circle d-flex align-items-center justify-content-center me-3">
                      <i class="bi bi-person-fill text-primary"></i>
                    </div>
                    <div>
                      <div class="fw-medium"><%= patient.full_name %></div>
                      <small class="text-muted"><%= patient.phone %></small>
                    </div>
                  </div>
                </td>
                <td>
                  <div class="text-muted"><%= patient.created_at.strftime("%b %d, %Y") %></div>
                </td>
                <td>
                  <span class="badge bg-<%= patient.gender.downcase == 'male' ? 'primary' : 'pink' %>-subtle text-<%= patient.gender.downcase == 'male' ? 'primary' : 'pink' %>">
                    <i class="bi bi-<%= patient.gender.downcase == 'male' ? 'gender-male' : 'gender-female' %> me-1"></i>
                    <%= patient.gender %>
                  </span>
                </td>
                <td><%= age_from_dob(patient.dob) %></td>
                <td class="text-end pe-4">
                  <div class="d-flex justify-content-end">
                    <%= link_to doctor_patient_path(patient), class: "btn btn-sm btn-outline-primary rounded-pill px-3 me-2" do %>
                      <i class="bi bi-eye-fill me-1"></i>View
                    <% end %>
                    <%= link_to "#", class: "btn btn-sm btn-outline-secondary rounded-circle" do %>
                      <i class="bi bi-three-dots-vertical"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    
    <div class="card-footer bg-white border-0 py-3">
      <nav aria-label="Patient pagination">
        <ul class="pagination justify-content-center mb-0">
          <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1">Previous</a>
          </li>
          <li class="page-item active"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#">Next</a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</div>

<!-- Include Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
  .card {
    border-radius: 12px;
  }
  .chart-container {
    min-height: 350px;
  }
  .icon-circle {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
  }
  .avatar-sm {
    width: 36px;
    height: 36px;
    font-size: 16px;
  }
  .border-start-primary {
    border-left: 4px solid #4e73df !important;
  }
  .border-start-success {
    border-left: 4px solid #1cc88a !important;
  }
  .border-start-info {
    border-left: 4px solid #36b9cc !important;
  }
  .bg-pink-subtle {
    background-color: rgba(236, 64, 122, 0.1);
  }
  .text-pink {
    color: #ec407a;
  }
  .bg-light-primary {
    background-color: rgba(78, 115, 223, 0.1);
  }
  .table-hover tbody tr:hover {
    background-color: rgba(78, 115, 223, 0.03);
  }
</style>