<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Doctor Dashboard</h1>
    <%= link_to 'View Full Trends', doctor_patient_trends_path, class: 'btn btn-primary' %>
  </div>

  <%= line_chart @patient_data,
        xtitle: "Date",
        ytitle: "Number of Patients",
        colors: ["#4CAF50"],
        library: {
          backgroundColor: "#f8f9fa",
          hAxis: { title: "Date" },
          vAxis: { title: "Patients" }
        }
  %>

  <h2>All Patients</h2>
  <div class="row">
    <div class="col-md-8">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>DOB</th>
            <th>Gender</th>
            <th>Phone</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @patients.each do |patient| %>
            <tr>
              <td><%= patient.full_name %></td>
              <td><%= patient.dob %></td>
              <td><%= patient.gender %></td>
              <td><%= patient.phone %></td>
              <td>
                <%= link_to 'View', doctor_patient_path(patient) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <%# <div class="col-md-4">
      <h3>Patient Registration Trends</h3>
      <%= line_chart @patient_trends, xtitle: "Date", ytitle: "Patients Registered", label: "Patients" %>
    <%# </div>  %>
  </div>
</div>