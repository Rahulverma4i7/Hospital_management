<div class="container">
  <h1>Doctor Dashboard</h1>
  
  <div class="row">
    <div class="col-md-8">
      <h3>Patients</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>DOB</th>
            <th>Gender</th>
            <th>Phone</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @patients.each do |patient| %>
            <tr>
              <td><%= patient.full_name %></td>
              <td><%= patient.dob %></td>
              <td><%= patient.gender %></td>
              <td><%= patient.phone %></td>
              <td>
                <%= link_to 'View', doctor_patient_path(patient) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="col-md-4">
      <h3>Patient Registration Trends</h3>
      <%= line_chart @patient_data, xtitle: "Date", ytitle: "Patients Registered" %>
    </div>
  </div>
</div>