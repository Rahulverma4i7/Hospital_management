<% content_for :title, "Register New Patient" %>

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-bold text-primary">
          <i class="bi bi-person-plus-fill me-2"></i>Register New Patient
        </h1>
        <%= link_to patients_path, class: "btn btn-outline-secondary" do %>
          <i class="bi bi-arrow-left me-1"></i> Back to Patients
        <% end %>
      </div>

      <div class="card shadow-sm border-0">
        <div class="card-body p-4">
          <%= render "form", patient: @patient %>
        </div>
      </div>

      <div class="mt-3 text-muted small">
        <i class="bi bi-info-circle me-1"></i> All fields are required unless marked optional
      </div>
    </div>
  </div>
</div>