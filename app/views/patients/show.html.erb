<% content_for :title, "#{@patient.full_name} - Patient Details" %>

<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="display-5 fw-bold text-primary mb-1">
        <i class="bi bi-person-vcard-fill me-2"></i>
        <%= @patient.full_name %>
      </h1>
      <p class="text-muted mb-0">
        Patient ID: <%= @patient.id || 'N/A' %>
      </p>
    </div>
    <%= link_to receptionist_patients_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left me-1"></i> Back to Patients
    <% end %>
  </div>

  <div class="row">
    <div class="col-lg-8">
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
          <h5 class="card-title mb-0">
            <i class="bi bi-info-circle me-2"></i>Basic Information
          </h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <label class="form-label text-muted small mb-1">Date of Birth</label>
                <p class="fs-5"><%= @patient.dob.strftime("%B %d, %Y") rescue 'N/A' %></p>
              </div>
              
              <div class="mb-3">
                <label class="form-label text-muted small mb-1">Gender</label>
                <p class="fs-5">
                  <span class="badge bg-<%= @patient.gender.downcase == 'male' ? 'primary' : 'danger' %>">
                    <%= @patient.gender %>
                  </span>
                </p>
              </div>
            </div>
            
            <div class="col-md-6">
              <div class="mb-3">
                <label class="form-label text-muted small mb-1">Phone Number</label>
                <p class="fs-5"><%= @patient.phone || 'N/A' %></p>
              </div>
              
              <div class="mb-3">
                <label class="form-label text-muted small mb-1">Age</label>
                <p class="fs-5"><%= ((Date.today - @patient.dob).to_i/365.25).to_i rescue 'N/A' %> years</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-header bg-light">
          <h5 class="card-title mb-0">
            <i class="bi bi-geo-alt me-2"></i>Address
          </h5>
        </div>
        <div class="card-body">
          <p class="fs-5"><%= @patient.address || 'No address on file' %></p>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card shadow-sm">
        <div class="card-header bg-light">
          <h5 class="card-title mb-0">
            <i class="bi bi-lightning-charge me-2"></i>Quick Actions
          </h5>
        </div>
        <div class="card-body">
          <%= link_to edit_receptionist_patient_path(@patient), class: "btn btn-primary w-100 mb-2" do %>
            <i class="bi bi-pencil-square me-1"></i> Edit Profile
          <% end %>
          <%= link_to "#", class: "btn btn-success w-100 mb-2" do %>
            <i class="bi bi-calendar-plus me-1"></i> New Appointment
          <% end %>
          <%= link_to "#", class: "btn btn-outline-danger w-100" do %>
            <i class="bi bi-file-earmark-medical me-1"></i> Medical History
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>